<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%-4relative | %15c{0}@%-10thread | %-5level | %msg%n</Pattern>
        </layout>
    </appender>

    <logger name="com.lyndir" level="DEBUG" />
    <logger name="net.lin-k" level="DEBUG" />
    <logger name="org.opensaml" level="WARN" />
    <logger name="org.jets3t.service.impl" level="WARN" />

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
