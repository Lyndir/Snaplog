    <!-- DEFAULT PROPERTIES -->
    <properties>
        <version.db4o>7.12-SNAPSHOT</version.db4o>
    </properties>

    <!-- BUILD CONFIGURATION -->
    <build>
        <resources>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>raw</exclude>
                </excludes>
            </resource>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/java</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <!--goal>run</goal--><!-- For db4o 8.0 only -->
                        </goals>
                        <configuration>
                            <tasks>
                                <path id="project.classpath">
                                    <path refid="maven.compile.classpath" />
                                    <path refid="maven.plugin.classpath" />
                                    <path refid="maven.runtime.classpath" />
                                </path>
                                <taskdef name="db4o-enhance" classname="com.db4o.enhance.Db4oEnhancerAntTask"

                                         classpathref="project.classpath" />
                                <db4o-enhance classtargetdir="${project.build.outputDirectory}" nq="true" ta="true" collections="true">
                                    <classpath refid="project.classpath" />
                                    <sources dir="${project.build.outputDirectory}">
                                        <include name="**/*.class" />
                                    </sources>
                                </db4o-enhance>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.db4o</groupId>
                        <artifactId>db4o-tools-java5</artifactId>
                        <version>${version.db4o}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.db4o</groupId>
                        <artifactId>db4o-instrumentation-java5</artifactId>
                        <version>${version.db4o}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.db4o</groupId>
                        <artifactId>db4o-nqopt-java5</artifactId>
                        <version>${version.db4o}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.db4o</groupId>
                        <artifactId>db4o-taj-java5</artifactId>
                        <version>${version.db4o}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.db4o</groupId>
                        <artifactId>db4o-core-java5</artifactId>
                        <version>${version.db4o}</version>
                    </dependency>
                    <dependency>
                        <groupId>edu.purdue.cs.bloat</groupId>
                        <artifactId>bloat</artifactId>
                        <version>1.0</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>keytool-maven-plugin</artifactId>
                <!--executions>
                        <execution>
                            <phase>generate-resources</phase>
                            <goals>
                                <goal>clean</goal>
                                <goal>genkey</goal>
                            </goals>
                        </execution>
                    </executions-->
                <configuration>
                    <keystore>
                        ${project.build.directory}/classes/${pom.artifactId}.jks
                    </keystore>
                    <dname>
                        CN=snaplog.net L=Sint-Amandsberg, ST=VL, O=Lhunath, C=BE
                    </dname>
                    <keypass>secret</keypass>
                    <storepass>secret</storepass>
                    <alias>${pom.artifactId}</alias>
                    <verbose>true</verbose>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
                    <webResources>
                        <resource>
                            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
                            <targetPath>WEB-INF</targetPath>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.15</version>
                <configuration>
                    <contextPath>/</contextPath>
                    <reload>manual</reload>

                    <systemProperties>
                        <systemProperty>
                            <name>logback.configurationFile</name>
                            <value>${basedir}/target/classes/logback.xml</value>
                        </systemProperty>
                        <systemProperty>
                            <name>snaplog.url.insecure</name>
                            <value>http://localhost:8080</value>
                        </systemProperty>
                        <systemProperty>
                            <name>snaplog.url.secure</name>
                            <value>http://localhost:8080</value>
                        </systemProperty>
                        <systemProperty>
                            <name>snaplog.path</name>
                            <value>/</value>
                        </systemProperty>
                        <systemProperty>
                            <name>linkid.url</name>
                            <value>https://demo.linkid.be</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>

