    </developers>


    <!-- CODE MANAGEMENT -->
    <scm>
        <url>http://album.lhunath.com</url>
        <connection>${scm.git.pubbase}/Album.git</connection>
        <developerConnection>${scm.git.devbase}/Album.git</developerConnection>
